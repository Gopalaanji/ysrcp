<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".F4Activity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                card_view:cardBackgroundColor="#14ffffff"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="Q4..రాబోయే ఎన్నికల్లో ఈ క్రింది అభ్యర్థులలో ఎమ్మెల్యే గా మీరు ఎవరికి ఓటు వేస్తారు?"
                            android:textSize="14dp" />

                        <RadioGroup
                            android:id="@+id/radiogroup_q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <RadioButton

                                android:id="@+id/radio_1vp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sri Ravela Kishor Babu(TDP MLA)"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_1v"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=" Smt Mekathoti Sucharitha(YSRCP)"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_1ok"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=" Sri Dokka Manikyavaraprasad(TDP)"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_gha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Any One from TDP"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_ysr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Any One from YSRCP"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_anyonejana"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Anyone from Janasena"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_anyonetdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Anyone from Congress"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/others"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Others"
                                android:textSize="15dp" />

                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!--<Button-->
                                <!--android:id="@+id/back_f4"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_gravity="end"-->
                                <!--android:layout_marginLeft="30dp"-->
                                <!--android:layout_marginTop="10dp"-->
                                <!--android:background="@color/colorAccent"-->
                                <!--android:onClick="backPage"-->
                                <!--android:text="@string/back"-->
                                <!--android:textColor="@color/white"-->
                                <!--android:textSize="14dp" />-->

                            <Button
                                android:id="@+id/next_f4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/colorAccent"
                                android:onClick="nextPage"
                                android:text="@string/next"
                                android:textColor="@color/white"
                                android:textSize="14dp" />


                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>