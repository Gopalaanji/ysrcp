<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MandalAndVillage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    card_view:cardBackgroundColor="#14ffffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:text="Mandal"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radiogroup_mandal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_m1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=" Prathipadu"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_m2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=" Pedanandipadu"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_m3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=" Vatticherukuru"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_m4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=" Kakumanu"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/radio_m5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text=" Guntur Rural "
                                android:textSize="15dp" />
                        </RadioGroup>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/f_name_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="14dp">

                            <EditText
                                android:id="@+id/village"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="lato"
                                android:hint="Village"
                                android:inputType="text"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/next_mandal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorAccent"
                            android:text="@string/next"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>